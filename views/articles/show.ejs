<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>
<hr />

<h3>Comment</h3>

<form action="/comments" method="POST">
  <div class="form-group">
    <label for="name">Your Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
  </div>

  <input type="hidden" name="articleId" value="<%article.id%>">

  <input type="submit" class="btn btn-primary">
</form>

<hr>

<a href="/">&larr; Back Home</a>

<h1>Comments</h1>

<% article.comments.forEach(function(c) { %>
  <div class="well">
    <h2>
      <small>by <%= c.name %></small>
    </h2>
    <p><%=c.content%></p>
    <p>
      <strong><%= moment(c.createdAt).calendar() %></strong>
    </p>
  </div>
<% }) %>

<hr />

<a href="/">&larr; Back Home</a>
